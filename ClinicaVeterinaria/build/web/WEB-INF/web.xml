<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>javax.faces.PROJECT_STAGE</param-name>
        <param-value>Development</param-value>
    </context-param>
    <context-param>
        <param-name>primefaces.THEME</param-name>
        <param-value>sunny</param-value>
    </context-param>
    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>/faces/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ClienteController</servlet-name>
        <servlet-class>controller.ClienteController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GrupoUsuarioController</servlet-name>
        <servlet-class>controller.GrupoUsuarioController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MascotaController</servlet-name>
        <servlet-class>controller.MascotaController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MascotaVacunaController</servlet-name>
        <servlet-class>controller.MascotaVacunaController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MedicoVeterinarioController</servlet-name>
        <servlet-class>controller.MedicoVeterinarioController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProxVacunaController</servlet-name>
        <servlet-class>controller.ProxVacunaController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UsuarioController</servlet-name>
        <servlet-class>controller.UsuarioController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>VacunaController</servlet-name>
        <servlet-class>controller.VacunaController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ClienteController</servlet-name>
        <url-pattern>/ClienteController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GrupoUsuarioController</servlet-name>
        <url-pattern>/GrupoUsuarioController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MascotaController</servlet-name>
        <url-pattern>/MascotaController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MascotaVacunaController</servlet-name>
        <url-pattern>/MascotaVacunaController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MedicoVeterinarioController</servlet-name>
        <url-pattern>/MedicoVeterinarioController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProxVacunaController</servlet-name>
        <url-pattern>/ProxVacunaController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UsuarioController</servlet-name>
        <url-pattern>/UsuarioController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>VacunaController</servlet-name>
        <url-pattern>/VacunaController</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>faces/index.xhtml</welcome-file>
    </welcome-file-list>
</web-app>
